---
import { getCategoryMeta } from "@/utils/categoryIcons";

type Props = {
  tag?: string;
};

const { tag = "" } = Astro.props;
const category = getCategoryMeta(tag);
const gradient = `linear-gradient(135deg, color-mix(in srgb, ${category.color} 85%, #0f172a 15%) 0%, color-mix(in srgb, ${category.color} 35%, #020617 65%) 100%)`;
---

<div
  class="relative w-full overflow-hidden rounded-lg"
  style={`aspect-ratio: 16 / 9; background: ${gradient};`}
  aria-hidden="true"
>
  <div
    class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(255,255,255,0.2),transparent_45%)]"
  >
  </div>
  <div
    class="absolute inset-0 bg-[linear-gradient(180deg,rgba(255,255,255,0.06)_0%,transparent_100%)]"
  >
  </div>
  <span
    class="absolute inset-0 flex items-center justify-center text-4xl drop-shadow-sm sm:text-5xl"
  >
    {category.icon}
  </span>
</div>
