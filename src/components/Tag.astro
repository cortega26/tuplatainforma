---
import IconHash from "@/assets/icons/IconHash.svg";
import { getPath } from "@/utils/getPath";

type Props = {
  tag: string;
  tagName: string;
  count?: number;
  size?: "sm" | "lg";
};

const { tag, tagName, count, size = "lg" } = Astro.props;
---

<li>
  <a
    href={getPath(`/tags/${tag}/`)}
    transition:name={tag}
    class:list={[
      "flex items-center gap-0.5",
      "border-b-2 border-dashed border-foreground",
      "hover:-mt-0.5 hover:[border-color:var(--color-accent-2)] hover:[color:var(--color-accent-2)]",
      "focus-visible:border-none focus-visible:[color:var(--color-accent-2)]",
      { "text-sm": size === "sm" },
      { "text-lg": size === "lg" },
    ]}
  >
    <IconHash
      class:list={[
        "opacity-80",
        { "size-5": size === "lg" },
        { "size-4": size === "sm" },
      ]}
    />
    {tagName}
    {
      typeof count === "number" && (
        <span
          class:list={[
            "ms-1 rounded-full px-1.5 py-0.5 text-xs font-semibold",
            "bg-[color:var(--color-surface)] text-[color:var(--color-accent-2)]",
            { "text-[10px]": size === "sm" },
          ]}
        >
          {count}
        </span>
      )
    }
  </a>
</li>
